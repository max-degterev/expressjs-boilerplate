- jade.config = config; jade.env = env; jade._ = _; jade.helpers = helpers;
doctype html
html(lang="en-US")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    title Express Boilerplate
    meta(name="description", content="Express Boilerplate")
    meta(name="author", content="Max Degterev")

    meta(name="Generator", content="Microsoft FrontPage 2.3")

    meta(name="viewport", content="width=device-width, initial-scale=1")
    //- meta(name="HandheldFriendly", content="True")
    //- meta(name="MobileOptimized", content="920")
    //- meta(name="format-detection", content="telephone=no")
    //- meta(http-equiv="cleartype", content="on")

    block stylesheets
      link(rel="stylesheet", href=getAsset('app.css'))

  body
    block body
      .l-wrap
        block container
          .l-content
            block content
              h1 It works

    block javascripts
      script.
        var app = {
          config: !{JSON.stringify(config)},
          env: !{helpers.sanitizeString(JSON.stringify(env))}
        };

      include layout/analytics
      script(src=getAsset('app.js'))
