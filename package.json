{
  "name": "expressjs-boilerplate",
  "description": "ExpressJS boilerplate with React SPA frontend",

  "license": "MIT",
  "readmeFilename": "README.md",
  "homepage": "http://max.degterev.me/",
  "author": "Max Degterev <max@degterev.me> (http://max.degterev.me/)",
  "repository": "suprMax/expressjs-boilerplate",
  "bugs": "https://github.com/suprMax/expressjs-boilerplate/issues",

  "private": true,
  "version": "0.0.1",

  "main": "app.js",
  "engines": {
    "node": "6.x.x"
  },

  "scripts": {
    "coffee": "coffee",
    "cjsx": "cjsx",
    "babel": "babel",
    "gulp": "gulp",

    "postinstall": "cd ./node_modules; ln -s \"../config/index.coffee\" \"config.coffee\" || true",

    "start": "gulp",
    "production": "NODE_ENV=production gulp build && NODE_ENV=production SANDBOX=true node app.js"
  },

  "devDependencies": {
    "errorhandler": "1.4.3",

    "browserify-incremental": "3.1.1",
    "gulp-nodemon": "2.2.1",
    "gulp-livereload": "3.8.1",
    "connect-livereload": "0.6.0",

    "babel-cli": "6.16.0"
  },

  "dependencies": {
    "lodash": "4.16.4",
    "coffee-script": "1.11.1",

    "babel-register": "6.16.3",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "babel-plugin-transform-react-constant-elements": "6.9.1",
    "babel-plugin-transform-react-remove-prop-types": "0.2.10",
    "core-js": "2.4.1",

    "chalk": "1.1.3",
    "gulp": "3.9.1",
    "gulp-sequence": "0.4.6",
    "gulp-rename": "1.2.2",

    "browserify": "13.1.0",
    "vinyl-source-stream": "1.1.0",
    "coffee-reactify": "5.1.0",
    "babelify": "7.3.0",

    "gulp-stylus": "2.5.0",
    "nib": "1.1.2",
    "gulp-css-decache": "0.0.8",

    "del": "2.2.2",
    "gulp-uglify": "2.0.0",
    "gulp-clean-css": "2.0.13",
    "gulp-rev": "7.1.2",
    "gulp-gzip": "1.4.0",

    "winston": "2.2.0",
    "express": "4.14.0",
    "pug": "2.0.0-beta6",
    "morgan": "1.7.0",
    "serve-favicon": "2.3.0",
    "serve-static": "1.11.1",
    "serialize-javascript": "1.3.0",

    "coffee-react": "5.0.1",
    "react": "15.3.2",
    "react-dom": "15.3.2",

    "react-router": "2.8.1",

    "redux": "3.6.0",
    "react-redux": "4.4.5",
    "redux-thunk": "2.1.0",
    "redux-logger": "2.7.0",
    "redux-immutable-state-invariant": "1.2.4",

    "redial": "0.5.0",
    "fastclick": "1.0.6",

    "normalize.css": "5.0.0"
  },

  "browser": {
    "config": "./config/client.coffee"
  },

  "babel": {
    "presets": ["react", "es2015", "stage-0"],
    "env": {
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-remove-prop-types"
        ]
      }
    }
  }
}
