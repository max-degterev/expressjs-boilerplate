{
  "name": "expressjs-boilerplate",
  "description": "ExpressJS boilerplate with React SPA frontend",

  "license": "MIT",
  "readmeFilename": "README.md",
  "homepage": "http://max.degterev.me/",
  "author": "Max Degterev <max@degterev.me> (http://max.degterev.me/)",
  "repository": "suprMax/expressjs-boilerplate",
  "bugs": "https://github.com/suprMax/expressjs-boilerplate/issues",

  "private": true,
  "version": "0.0.1",

  "main": "app.js",
  "engines": {
    "node": "6.x.x"
  },

  "scripts": {
    "coffee": "coffee",
    "babel": "babel-node",
    "gulp": "gulp",

    "postinstall": "cd ./node_modules; ln -s \"../config/index.coffee\" \"config.coffee\" || true",

    "start": "gulp",
    "production": "NODE_ENV=production gulp build && NODE_ENV=production SANDBOX=true node app.js"
  },

  "devDependencies": {
    "errorhandler": "1.4.3",

    "browserify-incremental": "3.1.1",
    "gulp-nodemon": "2.2.1",
    "gulp-livereload": "3.8.1",
    "connect-livereload": "0.6.0",

    "babel-cli": "6.18.0",

    "gulp-eslint": "3.0.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.6.0",
    "eslint-config-airbnb": "13.0.0",

    "stylint": "1.5.7",
    "stylint-stylish": "1.4.0"
  },

  "dependencies": {
    "lodash": "4.16.6",
    "coffee-script": "1.11.1",

    "babel-register": "6.18.0",
    "babel-runtime": "6.18.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-es2016": "6.16.0",
    "babel-preset-react": "6.16.0",

    "babel-plugin-transform-runtime": "6.15.0",
    "babel-plugin-transform-react-constant-elements": "6.9.1",
    "babel-plugin-transform-react-remove-prop-types": "0.2.10",
    "babel-plugin-transform-react-jsx-self": "6.11.0",
    "babel-plugin-transform-react-inline-elements": "6.8.0",

    "chalk": "1.1.3",
    "gulp": "3.9.1",
    "gulp-sequence": "0.4.6",
    "gulp-rename": "1.2.2",

    "browserify": "13.1.1",
    "vinyl-source-stream": "1.1.0",
    "coffee-reactify": "5.1.0",
    "babelify": "7.3.0",

    "gulp-stylus": "2.6.0",
    "nib": "1.1.2",
    "gulp-css-decache": "0.0.8",

    "del": "2.2.2",
    "gulp-uglify": "2.0.0",
    "gulp-clean-css": "2.0.13",
    "gulp-rev": "7.1.2",
    "gulp-gzip": "1.4.0",

    "winston": "2.3.0",
    "express": "4.14.0",
    "pug": "2.0.0-beta6",
    "morgan": "1.7.0",
    "serve-favicon": "2.3.0",
    "serve-static": "1.11.1",
    "serialize-javascript": "1.3.0",

    "coffee-react": "5.0.1",
    "react": "15.3.2",
    "react-dom": "15.3.2",

    "react-router": "3.0.0",

    "redux": "3.6.0",
    "react-redux": "4.4.5",
    "redux-thunk": "2.1.0",
    "redux-logger": "2.7.4",
    "redux-immutable-state-invariant": "1.2.4",

    "redial": "0.5.0",
    "fastclick": "1.0.6",

    "normalize.css": "5.0.0"
  },

  "browser": {
    "config": "./config/client.coffee"
  },

  "babel": {
    "presets": ["es2015", "es2016", "react"],
    "plugins": [["transform-runtime", { "polyfill": false, "regenerator": false, "helpers": true }]],
    "env": {
      "development": {
        "plugins": [
          "transform-react-jsx-self"
        ]
      },
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-remove-prop-types",
          "transform-react-inline-elements"
        ]
      }
    }
  },

  "eslintConfig": {
    "extends": ["airbnb"],
    "rules": {
      "no-console": "off",
      "func-names": ["error", "never"],
      "no-restricted-syntax": ["error", "ForInStatement", "LabeledStatement", "WithStatement"],

      "import/no-unresolved": ["error", { "commonjs": false }],
      "react/jsx-filename-extension": [1, { "extensions": [".es", ".jsx"] }]
    }
  },

  "stylintrc": {
    "reporter": "stylint-stylish",
    "reporterOptions": {
      "absolutePath": true,
      "ruleName": true
    },

    "blocks": false,
    "brackets": "never",
    "colons": "always",
    "colors": false,
    "commaSpace": "always",
    "commentSpace": "always",
    "cssLiteral": "never",

    "customProperties": [],

    "depthLimit": 4,
    "duplicates": true,
    "efficient": "always",
    "exclude": ["vendor/**/*", "node_modules/**/*"],
    "extendPref": "@extends",
    "globalDupe": true,
    "groupOutputByFile": true,
    "indentPref": 2,
    "leadingZero": "never",
    "maxErrors": false,
    "maxWarnings": false,
    "mixed": true,

    "namingConvention": false,
    "namingConventionStrict": false,
    "none": "always",
    "noImportant": false,
    "parenSpace": "never",
    "placeholders": "always",
    "prefixVarsWithDollar": "always",
    "quotePref": "single",

    "semicolons": "never",
    "sortOrder": ["margin", "padding", "float", "position"],
    "stackedProperties": "never",
    "trailingWhitespace": "never",
    "universal": false,
    "valid": true,
    "zeroUnits": "never",
    "zIndexNormalize": false
  }
}
