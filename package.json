  "scripts": {
    "babel": "babel-node",
    "gulp": "gulp",

    "start": "gulp",
    "production": "NODE_ENV=production SANDBOX=true gulp build && NODE_ENV=production SANDBOX=true node app.js",

    "decache": "rm ./build/.browserify-cache.json || true",
    "lint": "gulp lint || true",

    "test": "env TZ='Europe/Berlin' mocha",
    "testwatch": "env TZ='Europe/Berlin' mocha -w",
    "test:tofile": "mocha --no-colors -R spec 2>&1 | tee test-report.log"
  },

