html
  background: $colorSnow

html,
body,
main
  height: 100%

input[type="radio"],
input[type="checkbox"]
  blockInvisible()

input[type="password"]::-webkit-auto-fill-button
  margin-right: 25px
  background: $colorDark70

input,
select,
textarea,
button
  pointer-events: auto

// hack for FT Labs fastclick to work on <label> tag: https://github.com/ftlabs/fastclick/issues/275
label > *
  pointer-events: none
