blockRound($width)
  width: $width
  height: @width
  display: inline-block
  border-radius: 50%

blockResponsive($ratio = 100%)
  padding-top: $ratio
  display: block

// Invisible, but accessible to screen readers
blockInvisible()
  width: 1px
  height: 1px
  margin: -1px
  padding: 0

  position: absolute
  overflow: hidden

  border: none
  clip: rect(0 0 0 0)

blockCenter()
  absolute: top 50% left 50%
  transform: translate(-50%, -50%)

blockFill($width = 100%, $height = 100%)
  width: $width
  height: $height
  absolute: left top

textCenter($selector = null)
  text-align: center

  &:before
    height: 100%
    content: ''
    display: inline-block
    vertical-align: middle

  if $selector
    {$selector}
      display: inline-block
      vertical-align: middle
      text-align: left

textInvisible()
  color: transparent !important
  text-shadow: none
  text-decoration: none
  user-select: none
  cursor: default

backgroundFill($type = cover)
  background-repeat: no-repeat
  background-position: center center
  background-size: $type

iconSize($width, $height = null)
  if !$height
    $height = $width

  width: $width
  height: $height
  display: inline-block
  font-size: @width
  line-height: @height
